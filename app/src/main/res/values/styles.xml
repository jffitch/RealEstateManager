<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="details_image">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_marginStart">3dp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginBottom">3dp</item>
    </style>
    <style name="details_label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">3dp</item>
        <item name="android:textSize">8sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="details_stats">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">8sp</item>
        <item name="android:layout_marginStart">3dp</item>
    </style>
    <style name="add_fragment_rooms_edit_text">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="add_fragment_edit_text">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="add_fragment_section_label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">25dp</item>
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="add_fragment_field_label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>
    <style name="search_fragment_label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingBottom">10dp</item>
    </style>
    <style name="search_fragment_edittext">
        <item name="android:layout_width">246dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="search_fragment_edittext_price">
        <item name="android:layout_width">102dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">8</item>
    </style>
    <style name="search_fragment_edittext_area">
        <item name="android:layout_width">54dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">4</item>
    </style>
    <style name="search_fragment_edittext_rooms">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">2</item>
    </style>
    <style name="search_fragment_edittext_date">
        <item name="android:layout_width">126dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:maxLength">10</item>
    </style>
    <style name="search_fragment_rg">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>
</resources>
